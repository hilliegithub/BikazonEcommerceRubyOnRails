<h1>Edit Account</h1>

<% if @error_message.present? %>
  <div class="error-message">
    <%= @error_message %>
  </div>
<% end %>
<%= form_with(model: @account, url: account_edit_path(@account), method: :patch) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :primaryaddressstreet %>
    <%= form.text_field :primaryaddressstreet %>
  </div>

  <div>
    <%= form.label :primarypostalcode %>
    <%= form.text_field :primarypostalcode %>
  </div>

  <div>
    <%= form.label :secondaryaddressstreet %>
    <%= form.text_field :secondaryaddressstreet %>
  </div>

  <div>
    <%= form.label :secondarypostalcode %>
    <%= form.text_field :secondarypostalcode %>
  </div>

  <div>
    <%= form.label :primary_province_id %>
    <%= form.collection_select :primary_province_id, Province.all, :id, :provincename, prompt: true %>
  </div>

  <div>
    <%= form.label :secondary_province_id %>
    <%= form.collection_select :secondary_province_id, Province.all, :id, :provincename, prompt: true %>
  </div>

  <div>
    <%= form.submit "Update Account" %>
  </div>
<% end %>

<%= link_to 'Back', account_path(@account) %>
