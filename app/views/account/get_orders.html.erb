<h1> Your Past Orders</h1>

<% @orders.each do |order| %>
<h2>Order #<%= order.id %></h2>
<p>Status: <%= order.status %></p>
<p>Shipped to: <%= order.shippingAddress %></p>
<p>Payment method: <%= order.paymentmethod %></p>
<p>PST: <%= number_to_percentage(order.pst, precision:2) %></p>
<p>GST: <%= number_to_percentage(order.gst, precision:2) %></p>
<p>HST: <%= number_to_percentage(order.hst, precision:2) %></p>

<h3>Items Ordered</h3>
<% order.order_items.each do |item| %>
    <p><%= item.product.productname %></p>
    <p>Costed: <%= number_to_currency(item.price, precision: 2) %></p>
    <p>Quantity: <%= item.quantity %></p>
<% end %>
    <h4>Before Tax: <%= number_to_currency(order.order_items.all.reduce(0) do |sum, item| sum + item.price * item.quantity end) %></h4>
    <h4>Tax: <%= number_to_currency(((order.order_items.all.reduce(0) do |sum, item| sum + item.price * item.quantity end) * (order.pst + order.gst + order.hst))/100) %></h4>

    <p>Ordered: <%= order.created_at.strftime("%B %e, %Y %l:%M %p") %></p>
<% end %>