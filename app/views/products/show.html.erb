
<section class="mt-5">

<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <% if @product.images.first.present? %>
        <%= image_tag(@product.images.first.variant(resize_to_limit: [700,700])) %>
      <% else %>
        <p>No Image</p>
      <% end %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @product.productname %></p>
        <p class="subtitle is-6"><%= number_to_currency @product.price %></p>
      </div>
    </div>

    <div class="content">
      <%= @product.description %>
      <a href="#">#css</a> <a href="#">#responsive</a>
      <br>
      <p></p>
      <% if @cart.any? do |cartitem| cartitem['id'] == @product.id end %>
            <%= button_to 'remove from cart', remove_from_cart_path, params: { id: @product.id, where: 'P' }, method: :delete %>
      <% else %>
            <form action="<%= add_to_cart_path %>" method="post">
                <p><%= number_field_tag 'quantity_param', 1, min: 1, max: @product.amountinstock %>&nbsp;<%= button_to 'add to cart', add_to_cart_path, params: { id: @product.id }, method: :post %></p>
            </form>
      <% end %>
    </div>
  </div>
</div>

</section>